%h2= t('.resend_confirmation_instructions')
= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :username
    %br/
    = f.text_field :username, autofocus: true, autocomplete: "username", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.username)
  .actions
    = f.submit t('.resend_confirmation_instructions')
= render "devise/shared/links"
